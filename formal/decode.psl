vunit i_decode(decode(synthesis))
{

   -- set all declarations to run on clk
   default clock is rising_edge(clk_i);


   --------------------------------------------
   -- INTERNAL ASSERTIONS
   --------------------------------------------


   ---------------------------------------
   -- PROPERTIES OF THE OUTPUT INTERFACE
   ---------------------------------------

   f_ready : assert always {fetch_double_o and not fetch_double_i} |-> {fetch_ready_o = '0'};

   f_stable_microcodes : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_microcodes_o)};
   f_stable_addr       : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_addr_o)};
   f_stable_inst       : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_inst_o)};
   f_stable_immediate  : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_immediate_o)};
   f_stable_src_addr   : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_src_addr_o)};
   f_stable_src_mode   : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_src_mode_o)};
   f_stable_src_val    : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_src_val_o)};
   f_stable_src_imm    : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_src_imm_o)};
   f_stable_dst_addr   : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_dst_addr_o)};
   f_stable_dst_mode   : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_dst_mode_o)};
   f_stable_dst_val    : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_dst_val_o)};
   f_stable_dst_imm    : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_dst_imm_o)};
   f_stable_res_reg    : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_res_reg_o)};
   f_stable_r14        : assert always {exe_valid_o and not exe_ready_i and not rst_i} |=> {stable(exe_r14_o)};



   -----------------------------
   -- ASSUMPTIONS ABOUT INPUTS
   -----------------------------

   assume rst_i;


   --------------------------------------------
   -- COVER STATEMENTS TO VERIFY REACHABILITY
   --------------------------------------------


   ----------------------------------------------
   -- ADDITIONAL ASSERTS NEEDED FOR K-INDUCTION
   ----------------------------------------------


   ----------------------------------------------
   -- ADDITIONAL ASSUMES HELPFUL WHEN DEBUGGING
   ----------------------------------------------

} -- vunit i_decode(decode(synthesis))

